<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mvvm.View.Activity.GateEntryPass"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100.0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Storename"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/disc"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="10dp"
            />

        <TextView

            android:id="@+id/storename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:layout_weight="0.6"
            android:maxLength="6"
            android:textColor="#000000"

            android:textSize="30px"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:imeOptions="flagNoExtractUi"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Gate ExitNo"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/disc2"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="10dp"
            />

        <EditText

            android:id="@+id/gatepass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:layout_weight="0.6"
            android:textColor="#000000"


            android:textSize="30px"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:imeOptions="flagNoExtractUi"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Km Reading"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/disc3"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="10dp"
            />

        <EditText

            android:id="@+id/kmreading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:layout_weight="0.6"
            android:textColor="#000000"


            android:textSize="30px"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:imeOptions="flagNoExtractUi"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Seal No1"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/disc4"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="10dp"
            />

        <EditText

            android:id="@+id/sealno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:layout_weight="0.6"
            android:textColor="#000000"


            android:textSize="30px"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:imeOptions="flagNoExtractUi"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Storename"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/disc10"
            android:visibility="invisible"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="10dp"
            />

        <CheckBox

            android:id="@+id/brokenno1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:layout_weight="0.3"
            android:text="Broken No 1"
            android:textSize="10dp"
            android:textColor="#000000"

            android:layout_gravity="center_vertical"



            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Seal No2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/disc6"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="10dp"
            />

        <EditText

            android:id="@+id/sealno2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:layout_weight="0.6"
            android:textColor="#000000"


            android:textSize="30px"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:imeOptions="flagNoExtractUi"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Storename"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/disc5"
            android:visibility="invisible"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="10dp"
            />

        <CheckBox

            android:id="@+id/brokenno2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:layout_weight="0.3"
            android:text="Broken No 2"
            android:textSize="10dp"
            android:textColor="#000000"

            android:layout_gravity="center_vertical"



            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Gate Time"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/disc8"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="10dp"
            />

        <TextView

            android:id="@+id/gatetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:textSize="30px"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:imeOptions="flagNoExtractUi"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
       android:paddingTop="100dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="EXIT"
            android:textColor="#000000"
            android:textSize="@dimen/textsize" />



        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="SAVE"
            android:textColor="#000000"
            android:textSize="@dimen/textsize" />


    </LinearLayout>



</LinearLayout>